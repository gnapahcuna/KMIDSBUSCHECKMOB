<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_padding_content_nfc"
    android:paddingTop="@dimen/dimen_padding_content_nfc_top"
    android:paddingRight="@dimen/dimen_padding_content_nfc"
    android:paddingBottom="@dimen/dimen_padding_content_nfc_bottom"
    tools:context=".EndTransportFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_total_end"
        style="@style/FontPrimaryVariant18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/text_end_total_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_end"
        tools:layout_editor_absoluteX="24dp" />

</LinearLayout>