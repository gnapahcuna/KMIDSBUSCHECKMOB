<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="3200">
    <!--    duration3s-->
    <!--        Zoom animation Start with the center point of the control itself, zoom in to its own3Double size-->
    <scale
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="3"
        android:toYScale="3"
        android:fillAfter="true"
        android:repeatMode="restart"
        android:repeatCount="infinite"/>

    <!--        Transparency animation from opaque to transparent-->
    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        android:repeatCount="infinite"/>
</set>